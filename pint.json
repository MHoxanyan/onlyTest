{
    "preset": "psr12",
    "rules": {
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": true
        },
        "array_syntax": {
            "syntax": "short"
        },
        "function_declaration": {
            "closure_fn_spacing": "none"
        },
        "return_type_declaration": {
            "space_before": "none"
        },
        "not_operator_with_successor_space": false,
        "single_trait_insert_per_statement": false
    }
}
